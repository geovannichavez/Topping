<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.globalpaysolutions.topping">

    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".core.ToppingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ToppingTheme">

        <!-- One Signal -->
        <meta-data
            android:name="com.onesignal.BadgeCount"
            android:value="ENABLED"/>
        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE"/>

        <service
            android:name=".utils.OneSignalNotificationExtender"
            android:exported="false">
            <intent-filter>
                <action android:name="com.onesignal.NotificationExtender"/>
            </intent-filter>
        </service>

        <activity
            android:name=".ui.activities.Home"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.Signin">
        </activity>
    </application>

</manifest>